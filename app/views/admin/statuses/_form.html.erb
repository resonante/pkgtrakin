<div class="modal-body">

<%= form_for([:admin, @status]) do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% @status.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :package_id, value: @package.id %>

  <div class="form-group form-inline">
    <%= f.label t('packages.date_status') %><br>
    <%= f.datetime_select :date, {}, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label t('packages.status') %><br>
    <%= f.text_field :status, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t('packages.status_comments') %><br>
    <%= f.text_area :comments, class: "form-control" %>
  </div>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('packages.close') %></button>
  <%= f.submit t('packages.create_status'), :class => 'btn btn-primary' %>
</div>  
<% end %>
