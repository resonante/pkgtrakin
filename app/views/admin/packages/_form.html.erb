    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
            <%= f.label t('packages.reference') %><br>
            <%= f.text_field :reference, class: 'form-control' %>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="form-group">
