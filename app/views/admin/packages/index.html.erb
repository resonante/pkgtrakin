<p id="notice"><%= notice %></p>

<%= link_to 'New Package', new_admin_package_path, :class => 'btn btn-primary' %>

<h1 class="page-header" style="padding-top:24px;">Packages</h1>

<table data-toggle="table"
       data-classes="table table-hover table-striped"
       data-sort-name="date_received"
       data-sort-order="desc"
       data-url="/admin/packages"
       data-pagination="true"
       data-search="true"
       data-height="500">
    <thead>
    <tr>
        <th data-field="reference" data-sortable="true">Reference</th>
        <th data-field="track" data-sortable="true">Track</th>
        <th data-field="date_received" data-sortable="true">Date received</th>
        <th data-field="id" data-formatter="actionsFormatter">Actions</th>
    </tr>
    </thead>
</table>
<script>
function actionsFormatter(value) {
  var actions = '';
  actions += '<a style="padding-right:12px;" href="/admin/packages/' + value + '"><i class="glyphicon glyphicon-eye-open"></i></a>';
  actions += '<a style="padding-right:12px;" href="/admin/packages/' + value + '/edit"><i class="glyphicon glyphicon-pencil"></i></a>';
  actions += '<a style="padding-right:12px;" href="/admin/packages/' + value + '"><i class="glyphicon glyphicon-trash"></i></a>';
  return actions;
}
</script>