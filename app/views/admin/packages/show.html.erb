<h1 class="page-header">Package <%= @package.reference %></h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Status</h3>
    </div>
    <div class="panel-body">
    </div>
    <table class="table">
        <thead>
          <tr>
            <th>Date</th>        
            <th>Status</th>
            <th>Comments</th>                      
          </tr>          
        </thead>
        <tbody>
        <% @statuses.each do |status| -%>
          <tr>
            <td><%= status.date %></td>        
            <td><%= status.status %></td>
            <td><%= status.comments %></td>                      
          </tr>
        <% end -%>                
        </tbody>
      </table>    
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Receiver</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
          	<%= @package.user.email %>
          </div> 
        </div>
        <div class="col-xs-6">
          <div class="form-group">
          </div>
        </div>
      </div>          
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Sender</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
          	<%= @package.sender.name %>
          </div> 
        </div>
        <div class="col-xs-6">
          <div class="form-group">
          </div>
        </div>
      </div>          
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Package</h3>
    </div>
    <div class="panel-body">
    	
    </div>
	<table class="table">
	<thead></thead>
      <tbody>
        <tr>
          <th scope="row">Reference</th>
          <td><%= @package.reference %></td>        
          <th scope="row">Tracking number</th>
          <td><%= @package.track %></td>
          <th scope="row">Date received</th>
          <td><%= @package.date_received %></td>	                    
        </tr>
        <tr>
          <th scope="row">Height</th>
          <td><%= @package.height %></td>
          <th scope="row">Width</th>
          <td><%= @package.width %></td>	
          <th scope="row">Length</th>
          <td><%= @package.length %></td>	                    
        </tr>	
        <tr>
          <th scope="row">Weight</th>
          <td><%= @package.weight %></td>
          <th scope="row">Description</th>
          <td><%= @package.description %></td>  
          <th scope="row">Value</th>
          <td><%= @package.length %></td>                     
        </tr>                 
      </tbody>
    </table>    
  </div>

<%= link_to 'Edit', edit_admin_package_path(@package) %> |
<%= link_to 'Back', admin_packages_path %>
