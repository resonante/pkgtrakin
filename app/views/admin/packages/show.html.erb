<% if notice %>
<div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
    <%= notice %>
</div>
<% end %>

<h1 class="page-header"><%= t('packages.title').chop %> / <%= @package.reference %></h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('packages.status') %></h3>
    </div>
    <div class="panel-body">
    </div>
    <table class="table">
        <thead>
          <tr>
            <th><%= t('packages.date_status') %></th>        
            <th><%= t('packages.status') %></th>
            <th><%= t('packages.status_comments') %></th>                      
          </tr>          
        </thead>
        <tbody>
        <% @statuses.each do |status| -%>
          <tr>
            <td><%= status.date %></td>        
            <td><%= status.status %></td>
            <td><%= status.comments %></td>                      
          </tr>
        <% end -%>                
        </tbody>
      </table>    
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('users.reciver') %></h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
          	<%= @package.user.email %>
          </div> 
        </div>
        <div class="col-xs-6">
          <div class="form-group">
          </div>
        </div>
      </div>          
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('senders.sender') %></h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
          	<%= @package.sender.name %>
          </div> 
        </div>
        <div class="col-xs-6">
          <div class="form-group">
          </div>
        </div>
      </div>          
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('packages.title').chop %></h3>
    </div>
    <div class="panel-body">
    	
    </div>
	<table class="table">
	<thead></thead>
      <tbody>
        <tr>
          <th scope="row"><%= t('packages.reference') %></th>
          <td><%= @package.reference %></td>        
          <th scope="row"><%= t('packages.track') %></th>
          <td><%= @package.track %></td>
          <th scope="row"><%= t('packages.date_received') %></th>
          <td><%= @package.date_received %></td>	                    
        </tr>
        <tr>
          <th scope="row"><%= t('packages.height') %></th>
          <td><%= @package.height %></td>
          <th scope="row"><%= t('packages.width') %></th>
          <td><%= @package.width %></td>	
          <th scope="row"><%= t('packages.length') %></th>
          <td><%= @package.length %></td>	                    
        </tr>	
        <tr>
          <th scope="row"><%= t('packages.weight') %></th>
          <td><%= @package.weight %></td>
          <th scope="row"><%= t('packages.description') %></th>
          <td><%= @package.description %></td>  
          <th scope="row">Value</th>
          <td><%= @package.length %></td>                     
        </tr>                 
      </tbody>
    </table>    
  </div>

<%= link_to t('actions.edit'), edit_admin_package_path(@package) %> |
<%= link_to t('actions.back'), admin_packages_path %>
