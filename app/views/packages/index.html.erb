<h1 class="page-header">Packages</h1>

<% @packages.each do |package| %>

	<div class="media">
      <a class="media-left" href="#">
        <img data-holder-rendered="true" src="data:image/png;base64," style="width: 64px; height: 64px;" data-src="holder.js/64x64" alt="64x64">
      </a>
      <div class="media-body">
        <h4 class="media-heading"><%= package.reference %></h4>
		<table class="table">
		<thead></thead>
	      <tbody>
	        <tr>
	          <th scope="row">Tracking number</th>
	          <td><%= package.track %></td>
	          <th scope="row">Date received</th>
	          <td><%= package.date_received %></td>	
	          <th scope="row">Status</th>
	          <td>Delivered / Entregado</td>	                    
	        </tr>
	        <tr>
	          <th scope="row">Weight</th>
	          <td>97.02</td>
	          <th scope="row">Sender</th>
	          <td>Amazon</td>	
	          <th scope="row">Value</th>
	          <td>77.32</td>	                    
	        </tr>	        
	      </tbody>
	    </table>
	    <%= link_to 'Package details', package_path(package), :class => 'btn btn-primary' %>
	    <hr>
      </div>
    </div>

<% end %>    